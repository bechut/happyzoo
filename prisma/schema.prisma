generator client {
  provider      = "prisma-client-js"
  output        = "client/happyzoo"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Test {
  id String @id @default(uuid())
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique() @default("") @db.VarChar(255)
  password  String    @default("") @db.VarChar(255)
  status    Boolean   @default(true)
  createdAt DateTime  @default(now()) @db.Timestamptz
  updatedAt DateTime? @db.Timestamptz
  Profile   Profile?
  otp       Otp[]
}

enum Gender {
  Male
  Female
  Other
}

model Profile {
  id         String  @id @default(uuid())
  first_name String  @default("") @db.VarChar(255)
  last_name  String  @default("") @db.VarChar(255)
  gender     Gender?
  age        Int?
  bio        String?
  user_id    String  @unique()
  User       User    @relation(fields: [user_id], references: [id])
}

model Otp {
  id        String   @id @default(uuid())
  value     String   @default("") @db.VarChar(6)
  createdAt DateTime @default(now()) @db.Timestamptz
  expiredAt DateTime @default(now()) @db.Timestamptz
  user_id   String
  User      User     @relation(fields: [user_id], references: [id])
}
